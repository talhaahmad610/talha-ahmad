{% schema %}
{
  "name": "Banner Section",
  "tag": "section",
  "class": "banner-section",
  "settings": [],
  "presets": [
    {
      "name": "Banner Section"
    }
  ]
}
{% endschema %}

<style>
    /* Base Styles */
    .nav {
        display: flex;
        align-items: center;
        padding: 10px 20px;
        background: #F5F5F5;
        position: relative;
        min-height: 60px;
    }

    .mobile-menu-icon {
        display: none;
        cursor: pointer;
        font-size: 24px;
        position: absolute;
        left: 15px;
        z-index: 2;
    }

    .brand-name {
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        font-weight: bold;
        text-transform: uppercase;
        transition: opacity 0.3s ease;
    }

    .choose-gift-btn {
    display: inline-block;
    position: relative;
    background: #FFD900; 
    color: #000;
    text-decoration: none;
    padding: 10px 20px;
    font-weight: bold;
    border: none;
    overflow: hidden;
    transition: color 0.3s ease-in-out;
}

.choose-gift-btn::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: #000; 
    transition: left 0.3s ease-in-out;
    z-index: 0;
}

.choose-gift-btn:hover::before {
    left: 0; 
}

.choose-gift-btn span {
    position: relative;
    z-index: 1;
    transition: color 0.3s ease-in-out;
}

.choose-gift-btn:hover span {
    color: #FFF; 
}


    .top-text,
    .choose-gift-btn {
        display: none;
    }

    /* Hero Section */
    .hero {
    position: relative;
    width: 100%;
    background: white;
}

.hero-bg {
    width: 100%;
    height: auto;
    display: block;
}

.hero-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 90%;
    max-width: 1600px;
    margin: 0 auto;
    padding: 50px 0;
}

.hero-text {
    width: 50%;
    color: black;
    font-family: "Jost", sans-serif;
}

.hero-image {
    width: 50%;
    height: auto;
}

.shop-now-btn {
    display: inline-block;
    padding: 15px 30px;
    background: black;
    color: white;
    text-decoration: none;
    font-size: 1.5rem;
    text-transform: uppercase;
    font-family: "Jost", sans-serif;
    font-weight: 500;
    position: relative;
    overflow: hidden;
    transition: color 0.3s ease-in-out;
    margin-top: 0px;
}
.shop-now-btn::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: yellow;
    transition: left 0.3s ease-in-out;
    z-index: 0;
}

.shop-now-btn span {
    position: relative;
    z-index: 1;
}


.shop-now-btn:hover {
    color: black;
}

.shop-now-btn:hover::before {
    left: 0;
}


    .sustainable-banner {
        background: #F5F5F5;
        padding: 12px 10px;
        text-align: center;
    }

    /* Mobile Styles */
    @media (max-width: 768px) {
        .mobile-menu-icon {
            display: block;
        }

        .nav.active .brand-name {
            opacity: 0;
        }

        .nav.active {
            flex-direction: column;
            padding-bottom: 20px;
        }

        .nav.active .top-text,
        .nav.active .choose-gift-btn {
            display: block;
            width: 100%;
            text-align: center;
            margin: 10px 0;
        }

        
        
        .hero-bg {
        display: none;
    }

    .hero-content {
        display: flex;
        flex-direction: column;
        padding: 20px 15px 0 !important;
    }

    /* Text section */
    .hero-text {
        order: 1;
        width: 100% !important;
        text-align: center;
        padding: 0 !important;
        margin-bottom: 15px;
    }

    /* Truncate paragraph */
    .hero-text p {
        display: -webkit-box;
        -webkit-line-clamp: 1;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        margin: 10px 0 0;
    }

    /* Image container */
    .hero-image {
        order: 2;
        width: 100%;
        position: relative;
        margin-top: 15px;
    }

    /* Shop Now button positioning */
    .shop-now-btn {
        order: 3;
        position: absolute;
        bottom: 10%;
        left: 50%;
        transform: translateX(-50%);
        z-index: 2;
        width: 80%;
        max-width: 200px;
        margin: 0;
        font-size: 1.2rem;
        padding: 12px 20px;
    }

    /* Sustainable banner spacing */
    .sustainable-banner {
        margin-top: -1px;
    }

    .banner-text {
        font-size: 12px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        padding: 10px 5px;
    }
 }
    @media (min-width: 769px) {
        .nav {
            justify-content: space-between;
        }

        .brand-name {
            position: static;
            transform: none;
            margin-right: auto;
        }

        .top-text {
            display: block;
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
        }

        .choose-gift-btn {
            display: inline-block;
        }

        .hero-content {
            flex-direction: row;
            justify-content: space-between;
            max-width: 1600px;
            margin: 0 70px;
            padding: 50px 0;
            text-align: left;
        }

        .hero-text {
            width: 50%;
        }

        .hero-image {
            display: block;
            width: 60%;
            height:auto;
            margin-right: -60px;
        }

        .mobile-bg { display: none; }
        .shop-now-btn { position: relative; }
    }
</style>

<header>
    <nav class="nav">
        <div class="mobile-menu-icon" onclick="toggleMobileHeader()">☰</div>
        <span class="brand-name">TISSO VISION</span>
        <span class="top-text">Find the ideal gift for your loved ones.</span>
        <a href="#" class="choose-gift-btn">
            <span>CHOOSE GIFT →</span>
        </a>
    </nav>
</header>

<section class="hero">
  <img class="hero-bg" src="{{ 'bg-1.png' | asset_url }}" alt="Desktop Background">
  
  <div class="hero-content">
    <div class="hero-text">
      <h1>The Gift Guide</h1>
      <p>Discover Joy: Your Ultimate Holiday Gift Destination.<br>Explore our curated selection 
      and find the perfect gifts to delight your loved ones this holiday season.</p>
      <a href="#" class="shop-now-btn"><span>Shop Now →</span></a>
    </div>
    <img class="hero-image" src="{{ 'bg-2.png' | asset_url }}" alt="Product Image">
  </div>
</section>

<section class="sustainable-banner">
  <div class="banner-text">
    SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL
  </div>
</section>

<script>
function toggleMobileHeader() {
    const nav = document.querySelector('.nav');
    nav.classList.toggle('active');
}

document.addEventListener('click', function(event) {
    const nav = document.querySelector('.nav');
    const mobileIcon = document.querySelector('.mobile-menu-icon');
    
    if (!nav.contains(event.target) && !mobileIcon.contains(event.target)) {
        nav.classList.remove('active');
    }
});
</script>